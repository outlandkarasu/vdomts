{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "module": "AMD",
        "declaration": true,
        "rootDirs": ["./src"],
        "outDir": "./dist",
        "outFile": "./dist/index.js",
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    }
}

