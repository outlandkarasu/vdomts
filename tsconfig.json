{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "module": "commonJS",
        "declaration": true,
        "rootDirs": ["src"],
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}

